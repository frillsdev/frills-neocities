<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ '(Redirecting) ' if redirectTo }}{{ title | safe +' - ' if title }}{{ metadata.title }}</title>
    <meta name="description" content="{{ description | safe if description else metadata.description }}">
    <meta name="color-scheme" content="dark light">
    {#- Redirect -#}
    {%- if redirectTo -%}
    <script>location = '{{redirectTo}}';</script>
    <meta http-equiv="refresh" content="0; url={{metadata.url + redirectTo}}">
    <link rel="canonical" href="{{metadata.url + redirectTo}}">
    <meta name="robots" content="noindex">
    {%- else %}
    <link rel="canonical" href="{{metadata.url + page.url}}">
    {%- endif %}
    {# RSS Feeds #}
    <link rel="alternate" type="application/rss+xml" title="Frills" href="{{metadata.url}}/all.xml">
    <link rel="alternate" type="application/rss+xml" title="Frills - Blog & experiments" href="{{metadata.url}}/rss.xml">
    <link rel="alternate" type="application/rss+xml" title="Frills - Bookmarks" href="{{metadata.url}}/bookmarks.xml">
    <link rel="alternate" type="application/rss+xml" title="Frills - Changelog" href="{{metadata.url}}/changelog.xml">
    {# Webmentions #}
    <link rel="webmention" href="https://webmention.io/frills.dev/webmention">
    <link rel="pingback" href="https://webmention.io/frills.dev/xmlrpc">
    {# Places I claim on the internet #}
    <link rel="me" href="{{metadata.url + page.url}}" class="u-url u-uid">
	<link rel="me" href="mailto:fri11s@proton.me" class="u-email">
    <link rel="me" href="https://indieweb.social/@frills">
    <link rel="me" href="https://social.lol/@frills">
    <link rel="me" href="https://frills.omg.lol">
    {# OpenGraph #}
    <meta property="og:type" content="website">
    <meta property="og:url" content="{{metadata.url + page.url}}">
    <meta property="og:image" content="https://dynamic-og-image-generator.vercel.app//api/generate?title={{ title | safe }}&author={{ metadata.author.name }}&avatar={{ metadata.avatar }}&websiteUrl={{ metadata.url }}&theme=shadesOfPurple">
    {# Favicon #}
    <link rel="icon" type="image/png" href="/images/favicon/favicon-96x96.png" sizes="96x96" />
    <link rel="icon" type="image/svg+xml" href="/images/favicon/favicon.svg" />
    <link rel="shortcut icon" href="/images/favicon/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/images/favicon/apple-touch-icon.png" />
    <meta name="apple-mobile-web-app-title" content="Frills" />
    <link rel="manifest" href="/images/favicon/site.webmanifest" />
    {# Style #}
    <link href="/css/main.css?nocache={{ nocache if nocache else metadata.nocache }}" rel="stylesheet">
    {%- if style %}
    <style>{{ style | safe }}</style>
    {%- endif %}
    {# Font -#}
    <link rel="preload" as="font" href="/fonts/atkinson-hyperlegible/regular.woff2">
    <noscript>
        <link href="/css/noscript.css?nocache={{ nocache if nocache else metadata.nocache }}" rel="stylesheet">
    </noscript>
</head>