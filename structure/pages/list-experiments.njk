{% extends "structure/templates/page-full.njk" %}

{% block main %}
	<div class="d-b pb-1">
		<a href="/rss.xml" class="rss">Blogs & experiments RSS feed</a>
	</div>
	{% if description %}
		<p>{{description}}</p>
	{% endif %}
	<section class="experiments cards pt-1">
		{% for experiment in postslist | reverse %}
			<article id="{{ experiment.data.title | slugify }}" class="card">
				<div class="card__image">
					<img src="{{ experiment.data.image }}" alt="" loading="lazy" class="ar-16-9">
				</div>
				<div class="card__content">
					<a href="{{ experiment.url | url}}" class="card__title">{{experiment.data.title | safe}}</a>
					{% if experiment.data.description %}
					<p class="card__description">{{experiment.data.description | safe }}</p>
					{% endif %}
				</div>
			</article>
		{% endfor %}
	</section>
{% endblock %}