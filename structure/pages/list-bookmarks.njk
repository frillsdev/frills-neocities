{% extends "structure/templates/page-full.njk" %}

{% block main %}
<section class="bookmarks cards pt-1">
	{% for bookmark in postslist | reverse %}
		<article id="{{ bookmark.data.title | slugify }}" class="card h-cite u-like-of">
			<div class="card__content">
				<a rel="p-name u-url" href="{{ bookmark.data.url | url}}" class="card__title">
					{{bookmark.data.title | safe}}
				</a>
				{% if bookmark.data.url %}
				<p class="card__url"><img src="https://v1.indieweb-avatar.11ty.dev/{{ bookmark.data.url | encodeUrl}}" class="card__favicon" loading="lazy" alt="">{{ bookmark.data.url }}</p>
				{% endif %}
				{% if bookmark.data.description %}
				<p class="card__description">{{bookmark.data.description | safe }}</p>
				{% endif %}
			</div>
		</article>
	{% endfor %}
</section>
{% endblock %}