scripts: '<script>
        const articles = document.querySelectorAll(`article`);
let highestZIndex = 1;

const getRandomPosition = (element) => {
    const viewportWidth = window.innerWidth;
    const viewportHeight = window.innerHeight;
    const elementWidth = element.offsetWidth;
    const elementHeight = element.offsetHeight;

    const x = Math.random() * (viewportWidth - elementWidth);
    const y = Math.random() * (viewportHeight - elementHeight);

    return { x, y };
};

const loadPositions = () => {
    articles.forEach((element, index) => {
        const key = `article_${index}`;
        const storedData = JSON.parse(localStorage.getItem(key));
        if (storedData) {
            element.style.left = storedData.left;
            element.style.top = storedData.top;
            element.style.zIndex = storedData.zIndex;
            highestZIndex = Math.max(highestZIndex, parseInt(storedData.zIndex, 10));
        } else {
            const { x, y } = getRandomPosition(element);
            element.style.left = `${x}px`;
            element.style.top = `${y}px`;
            element.style.zIndex = `${++highestZIndex}`;
        }
    });
};

const savePosition = (element, index) => {
    const key = `article_${index}`;
    const position = {
        left: element.style.left,
        top: element.style.top,
        zIndex: element.style.zIndex,
    };
    localStorage.setItem(key, JSON.stringify(position));
};

articles.forEach((element, index) => {
    let offsetX = 0, offsetY = 0, isDragging = false;

    const startDrag = (event) => {
        isDragging = true;
        const clientX = event.touches ? event.touches[0].clientX : event.clientX;
        const clientY = event.touches ? event.touches[0].clientY : event.clientY;
        offsetX = clientX - element.offsetLeft;
        offsetY = clientY - element.offsetTop;
        element.style.zIndex = `${++highestZIndex}`;
    };

    const moveDrag = (event) => {
        if (!isDragging) return;
        const clientX = event.touches ? event.touches[0].clientX : event.clientX;
        const clientY = event.touches ? event.touches[0].clientY : event.clientY;
        const x = clientX - offsetX;
        const y = clientY - offsetY;
        element.style.left = `${x}px`;
        element.style.top = `${y}px`;
    };

    const endDrag = () => {
        if (isDragging) {
            isDragging = false;
            savePosition(element, index);
        }
    };

    element.addEventListener(`mousedown`, startDrag);
    element.addEventListener(`touchstart`, startDrag);

    document.addEventListener(`mousemove`, moveDrag);
    document.addEventListener(`touchmove`, moveDrag);

    document.addEventListener(`mouseup`, endDrag);
    document.addEventListener(`touchend`, endDrag);

    if (!element.style.zIndex) {
        element.style.zIndex = `${++highestZIndex}`;
    }
});

loadPositions();

        </script>'
