date: 2025-02-10
rss: true
style: '@import url("/css/pages/_nice.css"); @media (min-width: 650px) { .d-n-md { display: none; } };'
scripts: '<script>
  sparkles(["💖","💗","💓","💞","❣️","💝","💘","❤️","🩷","🧡","💛","💚","💙","🩵","💜","🤎","🖤","🩶","🤍","🫀","🫶",]);
  const niceThings = document.querySelectorAll(".nice-thing");
  const lettersContainer = document.querySelector(".letters");
  let zIndexCounter = 10;

  const shuffleArray = (array) => {
    for (let i = array.length - 1; i > 0; i--) {
      const j = Math.floor(Math.random() * (i + 1));
      [array[i], array[j]] = [array[j], array[i]];
    }
  };

  const shuffledThings = Array.from(niceThings);
  shuffleArray(shuffledThings);

  shuffledThings.forEach((niceThing) => {
    lettersContainer.appendChild(niceThing);
    const center = document.querySelector(".cssletter").offsetWidth / 2 - niceThing.offsetWidth / 2;
    niceThing.style.left = `${center}px`;

    function isOverflown(element) {
      return element.scrollHeight > element.clientHeight || element.scrollWidth > element.clientWidth;
    }

    if (!isOverflown(niceThing)) {
      niceThing.classList.add("center");
    }
    let offsetX, offsetY;
    niceThing.addEventListener("mousedown", (e) => {
      if (e.target.tagName !== "BUTTON") {
        const rect = e.target.getBoundingClientRect();

        niceThing.style.position = "fixed";
        niceThing.style.left = `${rect.left}px`;
        niceThing.style.top = `${rect.top}px`;

        offsetX = e.clientX - rect.left;
        offsetY = e.clientY - rect.top;

        niceThing.style.zIndex = zIndexCounter++;
        const moveAt = (posX, posY) => {
          niceThing.style.left = `${posX - offsetX}px`;
          niceThing.style.top = `${posY - offsetY}px`;
        };
        const onMouseMove = (moveEvent) => moveAt(moveEvent.clientX, moveEvent.clientY);
        const onMouseUp = () => {
          document.removeEventListener("mousemove", onMouseMove);
          document.removeEventListener("mouseup", onMouseUp);
        };
        document.addEventListener("mousemove", onMouseMove);
        document.addEventListener("mouseup", onMouseUp);
      }
    });
  });
  document.querySelector("#openEnvelope").addEventListener("click", () => {
    document.querySelector(".envelope").classList.add("active");
  });
  const closeButtons = document.querySelectorAll(".closeLetter");
  closeButtons.forEach((button) => {
    button.addEventListener("click", (e) => {
      e.preventDefault();
      const niceThing = e.target.closest(".nice-thing");
      if (niceThing) {
        niceThing.style.display = "none";
      }
    });
  });
</script>'
